<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarTabStyle">@style/NlwActionBarTab</item>
        <item name="actionBarTabStyle">@style/NlwActionBarTab</item>
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>
    </style>
    <style name="NlwActionBarTab" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="background">@drawable/tab_bar_background</item>
    </style>
    <style name="spinnerItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/greyishGreen</item>
    </style>
    <color name="bgGreenColor">#00aa88</color>
    <color name="darkGreen">#009678</color>
    <color name="darkerGreen">#00876C</color>
    <color name="lightGreen">#58CCB5</color>
    <color name="bgOrange">#fdb747</color>
    <color name="redColor">#b70000</color>
    <color name="whiteColor">#ffffff</color>
    <color name="detailsColor">#f5a81a</color>
    <color name="redBlockColor">#fe4648</color>
    <color name="blueBlockColor">#009ec2</color>
    <color name="detailsHeader">#2f93ac</color>
    <color name="greyishGreen">#E8E8E8</color>

</resources>
