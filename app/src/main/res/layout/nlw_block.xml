<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/monthYearText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/nlwPadding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor" />

    <TextView
        android:id="@+id/nlwDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthYearText"
        android:layout_centerHorizontal="true"
        android:background="@layout/squareshape"
        android:gravity="center"
        android:height="@dimen/nlwCircleRadius"
        android:padding="@dimen/nlwPadding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/nlwDateSize"
        android:width="@dimen/nlwCircleRadius" />

    <TextView
        android:id="@+id/nlwHolidayText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nlwDateText"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="@dimen/nlwPadding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/whiteColor" />
    
    <TextView
        android:id="@+id/daysToGo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nlwHolidayText"
        android:gravity="center"
        android:paddingBottom="@dimen/nlwPadding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/whiteColor" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height=".3dp"
        android:id="@+id/holidayTopLine"
        android:layout_below="@id/daysToGo"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/holidayDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holidayTopLine"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/nlwPadding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/whiteColor" />

</RelativeLayout>